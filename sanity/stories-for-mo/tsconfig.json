{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "sanity": ["./node_modules/sanity"],
      "@sanity/*": ["./node_modules/@sanity/*"]
    }
  }
}

